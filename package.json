{
  "scripts": {
    "build": "rollup -c --failAfterWarnings",
    "watch": "rollup -c --failAfterWarnings --watch",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "build:firefox": "npm run build && cd dist/ && bestzip ../extension.xpi *",
    "prettier": "prettier --check ./src/",
    "lint": "eslint ./src/ --ext .js,.ts",
    "lint:fix": "eslint --fix ./src/ --ext .js,.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.2.1",
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/stylelint": "^13.13.3",
    "@types/webextension-polyfill": "^0.9.2",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "assert": "^2.0.0",
    "bestzip": "^2.2.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-svelte": "^2.14.1",
    "globals": "^16.3.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "npm-check-updates": "^16.6.2",
    "prettier": "npm:@btmills/prettier@^2.7.1",
    "prettier-plugin-svelte": "^2.9.0",
    "rollup": "^3.9.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-css-only": "^4.3.0",
    "rollup-plugin-svelte": "^7.1.0",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^29.0.0",
    "svelte": "^3.55.0",
    "svelte-check": "^3.0.1",
    "svelte-preprocess": "^5.0.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "await-lock": "^2.2.2",
    "csscolorparser-ts": "^1.1.1",
    "tldts": "^5.7.103"
